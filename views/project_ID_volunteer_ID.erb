<h2>Volunteer: <%= @volunteer.name %></h2>
<h3>Project: <%= @projet.title %></h3>

<form action='/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post'>
    <input name='_method' type='hidden' value='patch'>

    <label>
        Re-enter volunteer anme
        <input id='name' name='volunteer_name' type='text'>
    </label>

    <button type='submit' class='btn btn-info btn-lg'>Update Volunteer</button>
</form>

<form action='/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>' method='post'>
    <input name='_method' type='hidden' value='delete'>

    <button type='submit' class='btn btn-info btn-lg'>Delete Volunteer</button>
</form>

<a href='/projects/<%= @volunteer.project.id' %>>Back to <%= @volunteer.project.title %></a>
