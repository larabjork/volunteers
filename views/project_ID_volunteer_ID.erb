<h2>Volunteer: <%= @volunteer.name %></h2>
<h3>Project: <%= @project.title %></h3>

<form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method='post'>
  <input name='_method' type='hidden' value='patch'>
  <label>Re-enter Volunteer Name
    <input id='name' name='name' type='text'>
  </label>
  <button type='submit' class='btn btn-info btn-lg'>Update Volunteer</button>
</form>

<form action='/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>' method='post'>
  <label for=""></label>
  <input name='_method' type='hidden' value='delete'>
  <button type='submit' class='btn btn-info btn-lg'>Delete Volunteer</button>
</form>

<p><a href='/projects/<%= @project.id %>'>Back to project detail</a></p>
